<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wanmi.sbc.logisticscore.dao.WareHouseMapper">

    <!--通过仓库ID查询所有仓库-->
    <select id="findAllWareHouse" resultType="com.wanmi.sbc.logisticscore.entity.WareHouse">
        select ware_id,store_id,ware_code,ware_house_type,self_erp_id
        from ware_house where del_flag = 0
        <if test="wareHouseCodes != null and wareHouseCodes.size > 0">
            and ware_code in
            <foreach collection="wareHouseCodes" item="wareHouseCode" open="(" close=")" separator=",">
                #{wareHouseCode}
            </foreach>
        </if>
    </select>

</mapper>